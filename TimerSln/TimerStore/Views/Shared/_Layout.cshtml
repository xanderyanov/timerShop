<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Timer Store</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="/assets/js/vendors.js" asp-append-version="true"></script>
    <script src="/assets/js/main.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="/assets/css/vendors.css" asp-append-version="true" />
    <link rel="stylesheet" href="/assets/css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">Timer Store</span>
    </div>
    <div class="container">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Главная</a></li>
                <li class="nav-item"><a href="/Catalog" class="nav-link">Каталог</a></li>
            </ul>
        </header>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <vc:navigation-menu product="new Product()" />
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>

